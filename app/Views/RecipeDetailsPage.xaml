<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app.Views.RecipeDetailsPage"
             xmlns:viewmodel="clr-namespace:app.ViewModels"
             xmlns:model="clr-namespace:app.Models"
             x:DataType="viewmodel:RecipeDetailsPageViewModel"    
             Title="RecipeDetailsPage">
    <ScrollView>
        <VerticalStackLayout Spacing="10">
            <Image Source="{Binding CurrentRecipe.Image}" HeightRequest="300" Aspect="AspectFill"/>
            <Label Text="{Binding CurrentRecipe.Name}"
                   FontFamily="NotoSerifBold"
                   FontSize="26"
                   Margin="20,10"/>
            <StackLayout Orientation="Horizontal" Margin="20,0" Spacing="10">
                <Frame WidthRequest="32" HeightRequest="32" Padding="0" CornerRadius="16"
                       BackgroundColor="{StaticResource Gray200}" BorderColor="Transparent">
                    <Label Text="Soup yes"
                           FontFamily="Material"
                           FontSize="28"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           TextColor="White"/>
                </Frame>
                <Label Text="2023-03-26"
                       VerticalOptions="Center"
                       TextColor="{StaticResource Gray400}"/>
            </StackLayout>
            <Label Text="{Binding CurrentRecipe.DetailsInformation}"
                   Margin="20,0"
                   FontSize="16"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>